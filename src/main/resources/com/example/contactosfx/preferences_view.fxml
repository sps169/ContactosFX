            </ChoiceBox>
            <Button fx:id="set_language_button" mnemonicParsing="false" onAction="#onLanguageButtonAction" text="%set_language_button">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</StackPane>
